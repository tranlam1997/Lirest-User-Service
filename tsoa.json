{
  "entryFile": "src/main.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/**/*.controller.ts"
  ],
  "spec": {
    "outputDirectory": "src/common/swagger",
    "specVersion": 3,
    "host": "localhost:3000",
    "basePath": "/lirest/api/v1",
    "license": "MIT",
    "schemes": [
      "http",
      "https"
    ],
    "tags": [
      {
        "name": "Users",
        "description": "User related endpoints"
      }
    ],
    "securityDefinitions": {
      "bearer": {
        "type": "http",
        "scheme": "bearer",
        "name": "jwt"
      },
      "api_key": {
        "type": "apiKey",
        "name": "access_token",
        "in": "query"
      },
      "tsoa_auth": {
        "type": "oauth2",
        "authorizationUrl": "http://swagger.io/api/oauth/dialog",
        "flow": "implicit",
        "scopes": {
          "write:pets": "modify things",
          "read:pets": "read things"
        }
      }
    }
  },
  "routes": {
    "routesDir": "src/modules",
    "iocModule": "src/common/ioc.ts",
    "basePath": "/lirest/api/v1",
    "noWriteIfUnchanged": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ]
    }
  }
}